<div class="container" style="margin-top: 50px;">
    <div class="card"> 
    	<div class="card-header">
			Add Hostel Location
		</div>
        <div class="card-body">
            <form action="/Location/add/" method="post">
                <div class="form-group">
                    <label>Hostel_ID</label>
                    <input type="text" class="form-control" name="Hostel_ID" value="" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Longitude</label>
                    <input type="number" step="any" class="form-control" name="Longitude" value="" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Latitude</label>
                    <input type="number" step="any" class="form-control" name="Latitude" value="" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Add"/>
                </div>
            </form>
        </div>
    </div>
</div>