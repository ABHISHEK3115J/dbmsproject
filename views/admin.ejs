<div class="container" style="margin-top: 50px;">

    <div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link">Admin Details</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/admin/add">Add Admin</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        
        <% if(data.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Mobile_No</th>
                    <th width="200px"></th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <td><%= data[i].ID %></td>
                    <td><%= data[i].Name%></td>
                    <td><%= data[i].Email%></td>
                    <td><%=data[i].Mobile_No%></td>
                    <td>
                        <a class="btn btn-success edit" href="/admin/edit/<%=data[i].ID%>">Edit</a>                       
                        <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="/admin/delete/<%=data[i].ID%>">Delete</a>                       
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No Admin found!</p>
        <% } %>

        </div>
    </div>
</div>