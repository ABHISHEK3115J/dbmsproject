<div class="container" style="margin-top: 50px;">
    <div class="card"> 
    	<div class="card-header">
			Add Student
		</div>
        <div class="card-body">
            <%- include("./partials/messages.ejs") %> 
            <form action="/registration " method="post">
                <div class="form-group">
                    <label>Student_Name:</label>
                    <input type="text" class="form-control" name="Student_Name" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Department:</label>
                        <div class="input-group mb-3">
                            <select name="Department" class="custom-select" id="inputGroupSelect02">
                              <option selected>Choose...</option>
                              <option value="CSE">CSE</option>
                              <option value="ECE">ECE</option>
                              <option value="EEE">EEE</option>
                              <option value="ME">ME</option>
                              <option value="CE">CE</option>
                              <option value="BT">BT</option>
                              <option value="EI">EI</option>
                              <option value="AE">AE</option>
                              <option value="CHE">CHE</option>
                            </select>
                          </div>
                </div>
                <div class="form-group">
                    <label for="Gender">Gender</label>
                    <div class="input-group mb-3">
                        <select name="Gender" class="custom-select" id="inputGroupSelect02">
                          <option selected>Choose...</option>
                          <option value="Male">Male</option>
                          <option value="Female">Female</option>
                        </select>
                      </div>
                </div>
                <div class="form-group">
                    <label>Backlog:</label>
                    <input type="text" class="form-control" name="Backlog"   autocomplete="off">
                </div>
                <div class="form-group">
                    <label>CGPA:</label>
                    <input type="text" step="any" class="form-control" name="CGPA"   autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Study_Year:</label>
                    <div class="input-group mb-3">
                        <select name="Study_Year" class="custom-select" id="inputGroupSelect02">
                          <option selected>Choose...</option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                          <option value="4">4</option>
                        </select>
                      </div>
                </div>
                <div class="form-group">
                    <label>Mobile_No:</label>
                    <input type="text" class="form-control" name="Mobile_No"   autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="add" />
                </div>
            </form>
        </div>
    </div>
</div>