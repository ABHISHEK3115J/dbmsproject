<div class="container" style="margin-top: 50px;">
    <div class="card"> 
    	<div class="card-header">
			Editing Hostel Location
		</div>
        <div class="card-body">
            <form action="/location/update/<%= data._id %> " method="post">
                <div class="form-group">
                    <label>Hostel_ID</label>
                    <input type="text" class="form-control" name="Hostel_ID" value=<%= data.Hostel_ID %>  autocomplete="off" readonly>
                </div>
                <div class="form-group">
                    <label>Longitude</label>
                    <input type="number" step="any" class="form-control" name="Longitude" value=<%= data.Location[0] %>  autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Latitude</label>
                    <input type="number" step="any" class="form-control" name="Latitude" value=<%= data.Location[1] %>  autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="update"/>
                </div>
            </form>
        </div>
    </div>
</div>