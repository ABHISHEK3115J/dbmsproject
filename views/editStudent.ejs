<div class="container" style="margin-top: 50px;">
    <div class="card"> 
    	<div class="card-header">
			Edit Student
		</div>
        <div class="card-body">
            <%- include("./partials/messages.ejs") %> 
            <form action="/student/update/<%= Student_ID %> " method="post">
                <div class="form-group">
                    <label>Student_ID:</label>
                    <input type="text" class="form-control" name="Student_ID" value="<%= Student_ID %>" autocomplete="off" readonly>
                </div>
                <div class="form-group">
                    <label>Student_Name:</label>
                    <input type="text" class="form-control" name="Student_Name" value="<%= Student_Name %> " autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Department:</label>
                        <div class="input-group mb-3">
                            <select name="Department"  class="custom-select" id="inputGroupSelect02">
                                <%
                                var options = [ "CSE","ECE","EEE","ME","CE","BT","EI","AE","CHE" ];
                                for ( var i = 0; i < options.length; i++ )
                               {
                                 var selected = ( Department == options[i] ) ? "selected" : "";
                                  %><option value="<%=options[ i ] %>" <%=selected %>><%=options[i] %></option><%
                               }
                             %>
                            </select>
                          </div>
                </div>
                <div class="form-group">
                    <label for="Gender">Gender</label>
                    <div class="input-group mb-3">
                        <select name="Gender" class="custom-select" id="inputGroupSelect02">
                            <%
                            var options = [ "Male","Female" ];
                            for ( var i = 0; i < options.length; i++ )
                           {
                             var selected = ( Gender == options[i] ) ? "selected" : "";
                              %><option value="<%=options[ i ] %>" <%=selected %>><%=options[i] %></option><%
                           }
                         %>
                        </select>
                      </div>
                </div>
                <div class="form-group">
                    <label>Backlog:</label>
                    <input type="number" class="form-control" name="Backlog" value="<%= Backlog %> "  autocomplete="off">
                </div>
                <div class="form-group">
                    <label>CGPA:</label>
                    <input type="text" step="any" class="form-control" name="CGPA" value="<%= CGPA %> "  autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Study_Year:</label>
                    <div class="input-group mb-3">
                        <select name="Study_Year" class="custom-select" id="inputGroupSelect02">
                            <%
                               var options = [ "1", "2", "3", "4" ];
                               for ( var i = 0; i < options.length; i++ )
                              {
                                var selected = ( Study_Year == options[i] ) ? "selected" : "";
                                 %><option value="<%=options[ i ] %>" <%=selected %>><%=i+1 %></option><%
                              }
                            %>
                        </select>
                      </div>
                </div>
                <div class="form-group">
                    <label>Mobile_No:</label>
                    <input type="text" class="form-control" name="Mobile_No" value="<%= Mobile_No %> "   autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Admin_ID:</label>
                    <input type="number" class="form-control" name="ID" value="<%= ID %>" autocomplete="off" readonly>
                </div>
                <div class="form-group">
                    <label>Hostel_ID:</label>
                    <input type="number" class="form-control" name="Hostel_ID" value="<%= Hostel_ID %>" autocomplete="off" readonly>
                </div>
                <div class="form-group">
                    <label>Room_ID:</label>
                    <input type="text" class="form-control" name="Room_ID" value="<%= Room_ID %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Add"/>
                </div>
            </form>
        </div>
    </div>
</div>