<div class="container" style="margin-top: 50px;">

    <div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link">Student Details</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/allocate/add/<%= data1 %>/1">Add Student</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        
        <% if(data.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#Student_ID</th>
                    <th scope="col">Student_Name</th>
                    <th scope="col">Department</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Backlog</th>
                    <th scope="col">CGPA</th>
                    <th scope="col">Study_Year</th>
                    <th scope="col">Mobile_No</th>
                    <th scope="col">Admin_ID</th>
                    <th scope="col">Hostel_ID</th>
                    <th scope="col">Room_ID</th>
                    <th width="200px"></th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <td><%= data[i].Student_ID %></td>
                    <td><%= data[i].Student_Name%></td>
                    <td><%= data[i].Department%></td>
                    <td><%=data[i].Gender%></td>
                    <td><%= data[i].Backlog %></td>
                    <td><%= data[i].CGPA%></td>
                    <td><%= data[i].Study_Year%></td>
                    <td><%=data[i].Mobile_No%></td>
                    <td><%= data[i].ID %></td>
                    <td><%= data[i].Hostel_ID%></td>
                    <td><%= data[i].Room_ID%></td>
                    <td>
                        <a class="btn btn-success edit" href="/allocate/edit/<%= data1 %>/<%= data[i].Student_ID %>/ ">Edit</a>                       
                        <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="/allocate/delete/<%= data1 %>/<%= data[i].Student_ID %>">Delete</a>                       
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No Student found!</p>
        <% } %>
        </div>
    </div>
</div>