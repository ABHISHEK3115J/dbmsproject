<div class="container" style="margin-top: 50px;">
    <div class="card"> 
    	<div class="card-header">
			Edit Room
		</div>
        <div class="card-body">
            <%- include("./partials/messages.ejs") %> 
            <form action="/room/update/<%= Hostel_ID %>/<%= Room_ID  %> " method="post">
                <div class="form-group">
                    <label>Hostel_ID:</label>
                    <input type="text" class="form-control" name="Hostel_ID" value="<%= Hostel_ID %>" autocomplete="off" readonly>
                </div>
                <div class="form-group">
                    <label>Room_ID:</label>
                    <input type="text" class="form-control" name="Room_ID" value="<%= Room_ID %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Update"/>
                </div>
            </form>
        </div>
    </div>
</div>